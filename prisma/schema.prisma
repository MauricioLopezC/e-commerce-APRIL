// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String
  category    String
  size        String
  color       String
  stock       Stock?
  images      Images[]
  sex         String
}

model Stock {
  id        Int     @id @default(autoincrement())
  stock     Int
  product   Product @relation(fields: [ProductId], references: [id])
  ProductId Int     @unique
}

model Images {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  imgSrc    String
}
